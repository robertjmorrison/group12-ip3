          {
                @:<input type="checkbox" name="Remove attachment" value="1">Remove attachment</br>
          }

        </br></br>	 		 
        <button type="submit" name="submit" value="Edit Role">Edit Role</button>
        <p>@errorMessage</p>
        </br>
    </form>
</div>