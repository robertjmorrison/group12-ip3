          }
          else
          {
                @:<input type="checkbox" name="Create templates" value="1">Create templates</br>
          }

        @if (@editTemplate == 1)
          {
                @:<input type="checkbox" name="Edit templates" value="1" checked >Edit templates</br>
          }
          else
          {
                @:<input type="checkbox" name="Edit templates" value="1" >Edit templates</br>
          }

        @if (@closeReport == 1)
          {
                @:<input type="checkbox" name="Close reports" value="1" checked >Close reports</br>
          }
          else
          {
                @:<input type="checkbox" name="Close reports" value="1" >Close reports</br>
          }

        @if (@changeReportStatus == 1)
          {
                @:<input type="checkbox" name="Change report status" value="1" checked >Change report status</br>
          }
